#include<iostream>
#include<string>
#include<conio.h>
#include<stdio.h>

using namespace std;

int main(){
    string username;
    int pass, selection;
    
    cout << "                        Welcome to the Foundation Central Command's Terminal                    " << endl;
    cout << "  As with any terminal, we have a policy of one file one login. Please forgive us for the trouble" << endl;
    cout << " ==================================================================================================" << endl;
    
    cout << "Please enter your username : ";
    cin >> username;
    cout << "Enter your password : ";
    cin >> pass;
    
    if (username == "Alpha" && pass == 647401){
        system("clear");
        cout << "Access code received. Welcome back Alpha" << endl;
        cout << "1. Files regarding SCP-260" << endl;
        cout << "2. Information regarding Operation : Blackout" << endl;
        cout << "3. Assignment : Taskmaster" << endl;
        cout << "4. Information regarding MTF Delta-1 'Kingslayer' " << endl;
        cout << "Select your files : ";
        cin >> selection;
        
        while (selection > 4){
            system("clear");
            cout << "File not available Alpha. Select a real file." << endl;
            cout << "Access code received. Welcome back Alpha" << endl;
            cout << "1. Files regarding SCP-260" << endl;
            cout << "2. Information regarding Operation : Blackout" << endl;
            cout << "3. Assignment : Taskmaster" << endl;
            cout << "4. Information regarding MTF Delta-1 'Kingslayer' " << endl;
            cout << "Select your files : ";
            cin >> selection;
        }
        
        if (selection == 1){
            system("clear");
            cout << "SCP-240 is a vehicle capable of air travel. It is constructed from a wooden rod which the operator sits in the middle of, a mouthpiece connected to a pipe device, and a large canvas sack, which contains a porthole for exhaust fumes to exit. The words 'Morsum Kite' have been painted on spot the operator is intended to sit on. The words 'From many, comes might' are sown into the canvas." << endl;
        }
        else if (selection == 2){
            system("clear");
            cout << "Operation Blackout is a classified operation to exterminate or eliminate any and all possible causes of an XK-Class End of the World scenario." << endl;
        }
        else if (selection == 3){
            system("clear");
            cout << "SCP-5904 'Taskmaster' is an as-of-yet unknown entity that is theorized to be the cause of an oncoming XK-Class End of the World scenario. Operation Blackout deals with Taskmaster, and Delta-1 is the handler of this problem." << endl;
        }
        else if (selection == 4){
            system("clear");
            cout << "Mobile Task Force (MTF) Delta-1 'Kingslayer' is a new and upcoming MTF designed for black ops with extreme circumstances. Delta-1 will be in your command, Alpha." << endl;
        }
    }
    
    else{
        system("clear");
        cout << "Access denied. Unknown intruders detected, dispersing neurotoxin. Goodbye." << endl;
    }
}
